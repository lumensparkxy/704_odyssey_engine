# Environment Configuration for Odyssey Engine

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# Research Engine Settings
CONFIDENCE_THRESHOLD=75
MAX_SCRAPING_DEPTH=3
MAX_SEARCH_RESULTS=10
MAX_FOLLOW_UP_QUESTIONS=5

# Storage Paths
SESSION_STORAGE_PATH=./sessions
REPORTS_OUTPUT_PATH=./reports
CACHE_PATH=./cache

# Web Scraping Settings
USER_AGENT=Mozilla/5.0 (compatible; OdysseyEngine/1.0)
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/odyssey.log

# Report Generation
DEFAULT_REPORT_TONE=formal_accessible
INCLUDE_CONFIDENCE_SCORES=true
INCLUDE_SOURCE_RELIABILITY=true
